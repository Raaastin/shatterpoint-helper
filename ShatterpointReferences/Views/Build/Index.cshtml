@using ShatterpointReferences.Model
@using ShatterpointReferences.Units;

@model BuildModel

@section Scripts {

    <script>

        function SelectUnit(unitName) {
            $.ajax({
                type: "GET",
                url: "@Url.Action("SelectUnit", "Build")" + "?unitname=" + unitName,
                contentType: "application/json; charset=utf-8",
            }).done(function (data, status) {
                location.reload();
            }).fail(function (data, status) {
                console.log(data);
                console.log(status);
                alert("Error with SelectUnit");
            });
        }

        function ClearSelectedUnits() {
            $.ajax({
                type: "GET",
                url: "@Url.Action("ClearSelectedUnits", "Build")",
                contentType: "application/json; charset=utf-8",
            }).done(function (data, status) {
                location.reload();
            }).fail(function (data, status) {
                console.log(data);
                console.log(status);
                alert("Error with SelectUnit");
            });
        }

        function ActivateUnit(unitName) {
            $.ajax({
                url: "@Url.Action("ActivateUnit", "Build")" + "?unitname=" + unitName,
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    $('#activeUnitId').html(result);
                    $('#targetedUnitId').empty();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    Alert("error");
                }
            });
        }

        function TargetUnit(unitName) {
            $.ajax({
                url: "@Url.Action("TargetUnit", "Build")" + "?unitname=" + unitName,
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    $('#targetedUnitId').html(result);
                    $('#activeUnitId').empty();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    Alert("error");
                }
            });
        }

    </script>
}

<div>
    <div>
        <h1>Unit available</h1>
        <p>Chose up to 6 Units</p>
        <table>
            <tr>
                <td>Name</td>
                <td>Action</td>
            </tr>
            @foreach (var unit in @Model.UnitList)
            {
                <tr>
                    <td>@unit.Name</td>
                    <td><a href="#" onclick="SelectUnit('@unit.Name');return false;">Add</a></td>
                </tr>
            }
        </table>
    </div>

    <div>
        <h1>Selected Units</h1>
        <a href="#" onclick="ClearSelectedUnits();return false;">Clear selection</a>
        <table>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            @foreach (var unit in @Model.SelectedUnits)
            {
                @if (unit is not null)
                {
                    <tr>
                        <td>@unit.Name</td>
                        <td>
                            <a href="#" onclick="ActivateUnit('@unit.Name');return false;">Active</a>
                            /
                            <a href="#" onclick="TargetUnit('@unit.Name');return false;">Target</a>
                        </td>
                    </tr>
                }
            }
        </table>

        @* Clickable miniatures *@
        @foreach (var unit in @Model.SelectedUnits)
        {
            @if (unit is not null)
            {
                <a href="#" onclick="ActivateUnit('@unit.Name');return false;">
                    <img alt="@Url.Content(@unit.Name)" src="@Url.Content(String.Format("~/img/pp/{0}", unit.ProfilePicture))" />
                </a>
            }
        }
    </div>

    <div id="activeUnitId">
    </div>

    <div id="targetedUnitId">
    </div>

</div>