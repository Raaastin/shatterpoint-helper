@using Shatterpoint.Lib.Services;


@page "/cards/{UnitName}"
@inject UnitDataBaseService UnitDataBaseService

<img class="card-landscape" alt="Abilities: @UnitDataBaseService.Get(UnitName).Name" src="@UnitDataBaseService.Get(UnitName).AbilityCardUrl" />
<br>
<img class="card-landscape" alt="Abilities: @UnitDataBaseService.Get(UnitName).Name" src="@UnitDataBaseService.Get(UnitName).StanceCardUrl1" />
<br>
@if(!string.IsNullOrWhiteSpace(@UnitDataBaseService.Get(UnitName).StanceCardUrl2))
{    
    <img class="card-landscape" alt="Abilities: @UnitDataBaseService.Get(UnitName).Name" src="@UnitDataBaseService.Get(UnitName).StanceCardUrl2" />
<br>
}
<img class="card-landscape" alt="Abilities: @UnitDataBaseService.Get(UnitName).Name" src="@UnitDataBaseService.Get(UnitName).MainCardUrl" />
<br>


@code {

    [Parameter]
    public string UnitName { get; set; }
}
